section .data
    fmt db "Result = %d", 10, 0   
    x dd 20                       
    a dd 5                       
    result dd 0                

section .text
    extern printf                  

global main                        

; Psub(x, a)(Задание)
Psub:
    push ebp                       
    mov ebp, esp                  

    mov eax, [ebp + 8]             
    sub eax, [ebp + 12]            
    mov [result], eax              

    mov esp, ebp                   
    pop ebp                        
    ret                             

main:
    ; Psub
    push dword [a]               
    push dword [x]                 
    call Psub                     
    add esp, 8  

    push dword [result]            
    push fmt                       
    call printf                    
    add esp, 8                     

    mov eax, 0                    
    ret
